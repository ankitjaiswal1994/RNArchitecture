{
    "compilerOptions": {
      "baseUrl": "src",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "allowUnusedLabels": false,
      "noImplicitAny": false,
      "allowUnreachableCode": false,
    },
    "include": ["./src"],
  "typeAcquisition": {
    "include": ["jest"]
  },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }